<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkColorPrimaryDark</item>
        <item name="colorAccent">@color/darkColorAccent</item>
    </style>

    <style name="LightTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/lightColorPrimary</item>
        <item name="colorPrimaryDark">@color/lightColorPrimaryDark</item>
        <item name="colorAccent">@color/lightColorAccent</item>
    </style>

    <style name="OledBlack" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/oledColorPrimary</item>
        <item name="colorPrimaryDark">@color/oledColorPrimaryDark</item>
        <item name="colorAccent">@color/lightColorAccent</item>
        <item name="android:colorBackground">@color/black</item>
    </style>

    <style name="DarkActionbar">
        <item name="colorPrimary">@color/oledColorPrimary</item>
        <item name="android:colorPrimaryDark">@color/oledColorPrimaryDark</item>
    </style>

    <style name="OrangeFont">
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
