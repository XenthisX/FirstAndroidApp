<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:defaultValue="LightTheme"
        android:entries="@array/pref_theme_titles"
        android:entryValues="@array/pref_theme_values"
        android:key="themeSelection"
        android:summary="This preference lets you choose a theme for the app"
        android:title="Select Theme" />
    <SwitchPreference
        android:defaultValue="false"
        android:key="darkerBar"
        android:summaryOff="Not using darker actionbar"
        android:summaryOn="Currently using darker actionbar" />
    <SwitchPreference
        android:defaultValue="false"
        android:key="orangeFont"
        android:summaryOff="Not using orange font"
        android:summaryOn="Currently using orange font" />
</PreferenceScreen>